<div class="container mt-3">
  <h2>{{if this.user.id "Editar Usuário" "Novo Usuário"}}</h2>
  <form {{on "submit" this.saveUser}}>
    <div class="form-group">
      <label for="nome">Nome:</label>
      <input id="nome" type="text" class="form-control" value={{this.user.nome}}>
    </div>
    <div class="form-group">
      <label for="email">Email:</label>
      <input id="nome" type="text" class="form-control" value={{this.user.email}}>
    </div>
    <button class="btn btn-primary" {{on "click" (fn @onSave this.user)}}>Salvar</button>
  </form>
</div>
